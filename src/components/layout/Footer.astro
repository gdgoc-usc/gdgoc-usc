---
import { Image } from 'astro:assets';
import { socialLinks } from '@/config/social.data';
import { Globe, Mail, MapPin, Users, Code } from 'lucide-react';

const currentYear = new Date().getFullYear();

const footerNavLinks = [
  { href: '#about', text: 'About GDG' },
  { href: '#team', text: 'Our Team' },
  { href: '#partners', text: 'Partners' },
  { href: '#events', text: 'Events' },
  { href: '#merch', text: 'Merch' },
  { href: '#contact', text: 'Contact Us' },
];

const quickLinks = [
  {
    href: 'https://developers.google.com/community/gdg',
    text: 'GDG Program',
    icon: Globe,
  },
  {
    href: 'https://gdg.community.dev/gdg-on-campus-university-of-san-carlos-cebu-philippines/',
    text: 'Join Our Community',
    icon: Users,
  },
  { href: 'mailto:gdgoc.sancarlos@gmail.com', text: 'Email Us', icon: Mail },
  {
    href: 'https://www.google.com/maps/place/University+of+San+Carlos',
    text: 'Find Us',
    icon: MapPin,
  },
];

const resources = [
  { href: 'https://developers.google.com/', text: 'Google for Developers' },
  { href: 'https://cloud.google.com/', text: 'Google Cloud' },
  { href: 'https://firebase.google.com/', text: 'Firebase' },
  { href: 'https://android.dev/', text: 'Android Developers' },
  { href: 'https://web.dev/', text: 'Web.dev' },
  { href: 'https://ai.google.dev/', text: 'Google AI' },
];
---

<footer
  id='footer'
  class='relative border-t-2 border-black bg-white dark:border-gray-700 dark:bg-neutral-900'
>
  <div class='absolute inset-0 overflow-hidden'>
    <div
      class='absolute inset-0 h-full w-full'
      style='background-image: radial-gradient(circle at 50% 50%, rgba(0, 0, 0, 0.15) 1px, transparent 1px); background-size: 24px 24px; background-position: 0 0;'
    >
    </div>
  </div>

  <div class='absolute inset-0 overflow-hidden dark:hidden'>
    <div
      class='absolute inset-0 h-full w-full'
      style='background-image: radial-gradient(circle at 50% 50%, rgba(0, 0, 0, 0.08) 1px, transparent 1px); background-size: 16px 16px; background-position: 12px 12px;'
    >
    </div>
  </div>

  <div class='absolute inset-0 hidden overflow-hidden dark:block'>
    <div
      class='absolute inset-0 h-full w-full'
      style='background-image: radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.1) 1px, transparent 1px); background-size: 24px 24px; background-position: 0 0;'
    >
    </div>
  </div>

  <div class='absolute inset-0 hidden overflow-hidden dark:block'>
    <div
      class='absolute inset-0 h-full w-full'
      style='background-image: radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.05) 1px, transparent 1px); background-size: 16px 16px; background-position: 12px 12px;'
    >
    </div>
  </div>

  <div class='relative z-10 mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8'>
    <div class='grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-16'>
      <div class='space-y-8'>
        <div class='flex items-start space-x-4'>
          <Image
            src='/gdgoc_logo.svg'
            alt='GDGoC USC Logo'
            width={60}
            height={60}
            class='h-15 w-15'
          />
          <div>
            <h2
              class='text-2xl leading-tight font-bold text-black sm:text-3xl dark:text-white'
            >
              Google Developer Groups
            </h2>
            <p class='text-gdgoc-primary-blue text-lg font-normal'>
              University of San Carlos
            </p>
          </div>
        </div>

        <div class='space-y-4'>
          <p class='text-base leading-relaxed text-black dark:text-white'>
            Building the next generation of developers through technology,
            community, and innovation. Join us in exploring the latest in web
            development, mobile apps, cloud computing, and AI.
          </p>
          <div
            class='flex w-fit items-center space-x-2 rounded-full border-2 border-black p-4 text-sm text-black dark:border-white dark:text-white'
          >
            <MapPin className='h-4 w-4' />
            <span>University of San Carlos, Cebu</span>
          </div>
        </div>

        <div class='space-y-4'>
          <h3 class='text-lg font-semibold text-gray-900 dark:text-white'>
            Connect with Us
          </h3>
          <div class='flex space-x-4'>
            {
              socialLinks.map(social => (
                <a
                  href={social.href}
                  target='_blank'
                  rel='noopener noreferrer'
                  aria-label={social.label}
                  class='group hover:bg-gdgoc-primary-blue/10 dark:hover:bg-gdgoc-primary-blue/20 flex h-12 w-12 items-center justify-center rounded-full bg-gray-100 transition-all duration-200 hover:scale-110 dark:bg-neutral-800'
                >
                  {social.type === 'simple-icon' ? (
                    <svg
                      class={`h-6 w-6 ${social.color}`}
                      fill='currentColor'
                      viewBox='0 0 24 24'
                    >
                      <path
                        d={
                          typeof social.icon === 'string'
                            ? social.icon
                            : social.icon.path
                        }
                      />
                    </svg>
                  ) : (
                    <Globe className={`h-6 w-6 ${social.color}`} />
                  )}
                </a>
              ))
            }
          </div>
        </div>
      </div>

      <div class='grid grid-cols-2 gap-8 sm:grid-cols-2'>
        <div class='space-y-4'>
          <h3
            class='text-gdgoc-primary-green text-lg font-semibold dark:text-white'
          >
            Navigation
          </h3>
          <ul class='space-y-3'>
            {
              footerNavLinks.map(link => (
                <li>
                  <a
                    href={link.href}
                    class='hover:text-gdgoc-primary-blue dark:hover:text-gdgoc-secondary-blue text-sm text-black transition-colors duration-200 dark:text-gray-400'
                  >
                    {link.text}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div class='space-y-4'>
          <h3
            class='text-gdgoc-primary-green text-lg font-semibold dark:text-white'
          >
            Quick Links
          </h3>
          <ul class='space-y-3'>
            {
              quickLinks.map(link => {
                const IconComponent = link.icon;
                return (
                  <li>
                    <a
                      href={link.href}
                      target='_blank'
                      rel='noopener noreferrer'
                      class='hover:text-gdgoc-primary-blue dark:hover:text-gdgoc-secondary-blue group flex items-center space-x-2 text-sm text-black transition-colors duration-200 dark:text-gray-400'
                    >
                      <IconComponent className='w-4 h-4 group-hover:scale-110 transition-transform duration-200' />
                      <span>{link.text}</span>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class='space-y-4 sm:col-span-2'>
          <h3
            class='text-gdgoc-primary-green text-lg font-semibold dark:text-white'
          >
            Developer Resources
          </h3>
          <div class='grid grid-cols-2 gap-3'>
            {
              resources.map(resource => (
                <a
                  href={resource.href}
                  target='_blank'
                  rel='noopener noreferrer'
                  class='hover:text-gdgoc-primary-blue dark:hover:text-gdgoc-secondary-blue text-sm text-black transition-colors duration-200 dark:text-gray-400'
                >
                  {resource.text}
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <div class='mt-12 pt-8'>
      <div
        class='flex flex-col items-center justify-between space-y-4 md:flex-row md:space-y-0'
      >
        <div
          class='flex flex-col items-center space-y-2 text-sm text-gray-500 md:flex-row md:space-y-0 md:space-x-6 dark:text-gray-100'
        >
          <p>
            Â© {currentYear} Google Developer Group - University of San Carlos
          </p>
          <div class='flex space-x-4'>
            <a
              href='#'
              class='hover:text-gdgoc-primary-blue dark:hover:text-gdgoc-secondary-blue transition-colors duration-200'
            >
              Privacy Policy
            </a>
            <a
              href='#'
              class='hover:text-gdgoc-primary-blue dark:hover:text-gdgoc-secondary-blue transition-colors duration-200'
            >
              Terms of Service
            </a>
            <a
              href='#'
              class='hover:text-gdgoc-primary-blue dark:hover:text-gdgoc-secondary-blue transition-colors duration-200'
            >
              Code of Conduct
            </a>
          </div>
        </div>
        <div
          class='flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-100'
        >
          <Code className='h-4 w-4' />
          <span>Built with Astro, Typescript and Tailwind.</span>
        </div>
      </div>
    </div>
  </div>
</footer>
