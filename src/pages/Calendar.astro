---
import CalendarItem from '@/components/calendar/CalendarItem.astro';
import { EVENTS_DATA } from '@/config/events.data';
---

<section
  id='events'
  class='relative flex h-auto min-h-screen w-full flex-col bg-[#F8FAFD] py-12 dark:bg-[#1B1B1B]'
>
  <div class='container mx-auto mt-16 flex h-full flex-col px-4'>
    <div class='container mx-auto flex flex-col items-center px-4'>
      <div class='flex justify-center sm:md:lg:xl:mb-4'>
        <img
          src='/gdgoc_logo.svg'
          alt='GDGoC Logo'
          width={80}
          height={80}
          class='h-24 w-24 md:h-20 md:w-20'
        />
      </div>
      <div class='text-center'>
        <h1
          class='mb-4 text-4xl font-bold tracking-tighter text-black md:text-6xl dark:text-white'
        >
          Events Calendar
        </h1>
        <p
          class='mx-auto mb-4 max-w-4xl text-xl leading-relaxed text-gray-700 sm:text-2xl md:text-3xl dark:text-gray-200'
        >
          Stay tuned for our exciting upcoming events and activities!
        </p>
      </div>
      <div
        class='mt-8 grid grid-cols-2 items-center justify-center gap-2 md:grid-cols-3 lg:grid-cols-4'
      >
        {
          Object.entries(EVENTS_DATA).map(([month, events]) => (
            <CalendarItem month={month} events_data={events} />
          ))
        }
      </div>
    </div>
  </div>
</section>
