import { Image } from 'astro:assets';
const items = [
  // Row 1
  '/events/brewingvanilla.jpg',
  '/events/ideathon.jpg',
  '/events/devmaycry.jpg',
  '/events/devmaycry2.jpg',
  '/events/infosession.jpg',
  '/events/techfortomorow.jpg',
  '/events/gitonboard.jpg',
  // Row 2
  '/events/pythonquest.jpg',
  '/events/reactnative.jpg',
  '/events/tagyoureout.jpg',
  '/events/brewingvanilla.jpg',
  '/events/ideathon.jpg',
  '/events/devmaycry.jpg',
  '/events/devmaycry2.jpg',
  // Row 3
  '/events/infosession.jpg',
  '/events/techfortomorow.jpg',
  '/events/gitonboard.jpg',
  '/events/pythonquest.jpg',
  '/events/reactnative.jpg',
  '/events/tagyoureout.jpg',
  '/events/brewingvanilla.jpg',
  // Row 4
  '/events/ideathon.jpg',
  '/events/devmaycry.jpg',
  '/events/devmaycry2.jpg',
  '/events/infosession.jpg',
