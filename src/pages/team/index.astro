---
import TeamGrid from '@/components/team/TeamGrid';
import '@/styles/team-masonry.css';
import Header from '@/components/layout/Header.astro';
import Layout from '@/layouts/Layout.astro';
import Footer from '@/components/layout/Footer.astro';
import { Image } from 'astro:assets';
---

<Layout
  title='GDGoC USC - Our Team'
  description='Meet our amazing team members!'
>
  <Header />
  <section
    id='team'
    class='relative w-full min-h-screen flex flex-col items-center justify-center py-12 bg-white dark:bg-black'
    style='background-image: url(/gdgoc_bg_1.webp); background-size: cover; background-position: center; background-attachment: fixed;'
  >
    <div class='absolute inset-0 bg-white/0 dark:bg-black/0 z-0'></div>
    <div class='relative z-10 container px-4 sm:px-6 lg:px-8 mt-[4rem] w-full'>
      <div class='w-full'>
        <div class='flex justify-center mb-6'>
          <Image
            src='/gdgoc_logo.svg'
            alt='GDGoC Logo'
            width={80}
            height={80}
            class='w-16 h-16 md:w-20 md:h-20'
          />
        </div>
        <div class='text-center'>
          <div class='flex flex-col gap-2'>
            <h1
              class='text-4xl md:text-6xl font-bold text-black dark:text-white mb-4 tracking-tighter'
            >
              Our Team
            </h1>
          </div>
          <p
            class='text-xl sm:text-2xl md:text-3xl text-gray-700 dark:text-gray-200 leading-relaxed mb-8 max-w-4xl mx-auto'
          >
            Meet the dedicated leaders driving innovation and community
          </p>
        </div>
      </div>
    </div>

    <TeamGrid client:load />
  </section>
</Layout>
