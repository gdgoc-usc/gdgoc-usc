---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import Hero from './Hero.astro';
import About from './About.astro';
import Team from '@/pages/team/Team.astro';
import Partners from '@/pages/partners/Partners.astro';
---

<Layout
  title='GDGoC USC - Google Developer Groups on Campus'
  description='Join the Google Developer Groups on Campus at University of San Carlos. Learn, build, and connect with fellow developers.'
>
  <Header />
  <main class='w-full'>
    <Hero />

    <About />

    <Partners />

    <Team />

    <section
      id='events'
      class='flex min-h-screen w-full items-center justify-center bg-white dark:bg-neutral-900'
    >
      <div class='container mx-auto px-4 text-center sm:px-6 lg:px-8'>
        <h2 class='mb-4 text-4xl font-bold text-gray-900 dark:text-white'>
          Events
        </h2>
        <p class='text-xl text-gray-600 dark:text-gray-300'>Coming soon...</p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
